{
  "name": "susuflow-agent",
  "version": "1.0.0",
  "description": "NoahAI agent for SusuFlow - Automated ROSCA pool management on Celo",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "nodemon --watch src --exec ts-node src/index.ts",
    "start": "node dist/index.js",
    "clean": "rm -rf dist",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "eslint src --ext .ts"
  },
  "keywords": [
    "celo",
    "blockchain",
    "ai-agent",
    "rosca",
    "defi"
  ],
  "author": "SusuFlow Team",
  "license": "MIT",
  "dependencies": {
    "ethers": "^6.9.0",
    "dotenv": "^16.3.1",
    "winston": "^3.11.0",
    "node-cron": "^3.0.3",
    "async-retry": "^1.3.3"
  },
  "devDependencies": {
    "typescript": "^5.3.0",
    "@types/node": "^20.10.0",
    "@types/async-retry": "^1.4.8",
    "ts-node": "^10.9.2",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.0",
    "eslint": "^8.55.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
